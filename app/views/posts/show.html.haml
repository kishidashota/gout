= render "shared/header"
.post
  - if user_signed_in? && current_user.id == @post.user_id
    .delete-edition
      = link_to "Delete Post" ,post_path(@post.id), method: :delete 
    .delete-edition
      = link_to "Edit Post" ,edit_post_path(@post.id) 
  .post__content
    .post__content__title
      = @post.liked_users.count
      = @post.shop_name
    .post__content__recommend
    .post__content__partition
    .post__content__detail
      .post__content__detail--contributor
        .icon
          =link_to post_path(@post.id) do
            .img
              = image_tag @post.user.user_image.url,size:'30x30',class:"img"
            .name
              = link_to user_path(@post.user) do
                = @post.user.user_name
        .brands
          = @post.assortment
      .post__content__detail--post
        .img
          = image_tag @post.food_image.url,size:'480x300'
        .description
          = @post.description
          
.reviews
  .input
    - if current_user
      = form_with(model: [@post, @comment], local: true, class: "input__contents",id: "new_comment") do |form|
        = form.text_area :content, placeholder: "Let's try comments", rows: "2",class: "textbox"
        = form.submit "SEND",class: "form__submit"
    - else
      .text
        ※ コメントの投稿には新規登録/ログインが必要です ※
    .comments
      - if @comments
        - @comments.each do |comment|
          .data
            .icon
              .image
                = image_tag comment.user.user_image.url,class:"img"
              .name
                = link_to comment.user.user_name, "/users/#{comment.user_id}"
            .content
              = comment.content
          .partition
            %h3
              いいね件数: #{@post.likes.count}
            - if current_user.already_liked?(@post)
              = button_to 'いいねを取り消す', post_like_path(@post), method: :delete
            - else
              = button_to 'いいね', post_likes_path(@post)
            %h2 いいねしたユーザー
            - @post.liked_users.each do |user|
              %li= user.email




        

