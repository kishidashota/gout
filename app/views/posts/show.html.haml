= render "shared/header"
.post
  .post__content
    .post__content__title
      = @post.shop_name
    .post__content__recommend
    .post__content__partition
    .post__content__detail
      .post__content__detail--contributor
        .icon
          =link_to post_path(@post.id) do
            .img
              = image_tag @post.user.user_image.url,size:'30x30',class:"img"
            .name
              = @post.user.user_name
        .brands
          Asahi SAPPORO
    .post__content__detail--post
      .img
        = image_tag @post.food_image.url,size:'480x300'
      .description
        = @post.description
    .post__content__detail--adress
    .post__content__partition
    .reviews
      .comments
        %h4 ＜コメント一覧＞
        - if @comments
          - @comments.each do |comment|
            %p
              %strong
                = link_to comment.user.user_name, "/users/#{comment.user_id}"
                ：
              = comment.content
    .input
      .input__contents
      - if current_user
        = form_with(model: [@post, @comment], local: true) do |form|
          = form.text_area :content, placeholder: "Let's try comments", rows: "2",class:"input__contents--form"
          = form.submit "SEND",class:"btn"
      - else
        %strong
          %p ※※※ コメントの投稿には新規登録/ログインが必要です ※※※




        

