= render "shared/header"
= render "shared/main"
.main
  .main__title
    All posts
    .main__title__select-box
      %select{:name => "example"}
        %option Narrow down
        %option{:value => "選択肢1"} ASAHI
        %option{:value => "選択肢2"} KIRIN
        %option{:value => "選択肢3"} SUNTRY
        %option{:value => "選択肢4"} SAPPORO
        %option{:value => "選択肢5"} ORION
  .partition
  .main__contents
    - @post.each do |o|
      =link_to post_path(o) do
        = image_tag o.food_image.url,size:'200x200',class:"image"
        .posts__content
          .postt__content__name
            =o.shop_name
          .icon
            .img
              = image_tag o.user.user_image.url,size:'30x30',class:"img"
            .name
              = o.user.user_name
= render "shared/newpost"